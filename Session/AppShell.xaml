<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Session.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Session.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Session">

    <TabBar>
        <ShellContent
            Title="Timer"
            Icon="timer.png"
            ContentTemplate="{DataTemplate views:TimerHomePage}"
            Route="TimerHomePage" />
        <ShellContent
             Title="Details"
             Icon="graph.png"
             ContentTemplate="{DataTemplate views:TimerDetailsPage}"
             Route="TimerDetailsPage" />
        <ShellContent
             Title="Profile"
             Icon="user.png"
             ContentTemplate="{DataTemplate views:UserProfilePage}"
             Route="UserProfilePage" />    
    </TabBar>
</Shell>